@model PROGPOEst10439216.Models.Profiles

@{
    ViewData["Title"] = "Create Profile";
}

<div class="mb-4">
    <h2 class="text-secondary">Create Profile</h2>
</div>

<div class="card shadow-sm p-4">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row g-3">

            <div class="col-md-6">
                <label asp-for="UserId" class="form-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Department" class="form-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DefaultRatePerJob" class="form-label"></label>
                <input asp-for="DefaultRatePerJob" class="form-control" />
                <span asp-validation-for="DefaultRatePerJob" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="RoleName" class="form-label"></label>
                <select asp-for="RoleName" class="form-select">
                    <option value="">Select Role</option>
                    <option>HR</option>
                    <option>Lecturer</option>
                    <option>AcademicManager</option>
                    <option>ProgramCoordinator</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Create Profile</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>