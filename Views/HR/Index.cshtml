@model IEnumerable<PROGPOEst10439216.Models.Profiles>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Profiles</h2>
        <a class="btn btn-secondary text-white" asp-controller="HR" asp-action="Create">New Profile</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No profiles have been created yet.<br />
            <a class="btn btn-primary mt-2" asp-controller="HR" asp-action="Create">Create a new profile</a>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Department</th>
                    <th>Default Rate Per Job</th>
                    <th>Role Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model)
                {
                    <tr>
                        <td>@profile.UserId</td>
                        <td>@profile.Name</td>
                        <td>@profile.Surname</td>
                        <td>@profile.Department</td>
                        <td>@profile.DefaultRatePerJob</td>
                        <td>@profile.RoleName</td>
                        <td>
                            <form asp-controller="HR" asp-action="Delete" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@profile.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
